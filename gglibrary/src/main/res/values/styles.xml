<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="wrap_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_white_16dp" parent="wrap_content">
        <item name="android:textSize">@dimen/textsize_normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/title_background</item>
    </style>

    <style name="btn_dialog" parent="text_white_16dp">
        <item name="android:background">@drawable/selector_btn_dialog</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>
</resources>